{% extends 'layout.html.twig' %}

{% block content %}
  <header>
    <h1>Cadastro de sabor</h1>
    <a href="/new">Adicionar sabor</a>
  </header>
  <table>
    <thead>
      <th>Sabor</th>
      <th>Preço</th>
      <th>Disponível?</th>
    </thead>

    <tbody>
      {% for pizza in pizzas %}
      <tr>
        <td>{{ pizza.sabor }}</td>
        <td>{{ pizza.preco }}</td>
        <td>{{ pizza.disponivel }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
